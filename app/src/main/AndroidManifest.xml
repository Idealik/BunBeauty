<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ideal.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".other.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/BunBeauty"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".searchService.SearchService"/>
        <activity android:name=".subscriptions.Subscribers" />
        <activity
            android:name=".reviews.PickedComment"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".reviews.Comments" />
        <activity android:name=".reviews.Review" />
        <activity android:name=".chat.Messages" />
        <activity android:name=".chat.Dialogs" />
        <activity android:name=".logIn.Registration" />
        <activity android:name=".logIn.Authorization">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".other.Profile" />
        <activity android:name=".createService.AdditionService" />
        <activity android:name=".searchService.GuestService" />
        <activity android:name=".searchService.MainScreen" />
        <activity android:name=".createService.MyTime" />
        <activity android:name=".createService.MyCalendar" />
        <activity android:name=".editing.EditService" />
        <activity android:name=".editing.EditProfile" />
        <activity android:name=".logIn.VerifyPhone" />
        
        <service
            android:name=".other.MyService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service
            android:name=".notifications.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".notifications.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>    </application>

</manifest>