<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subscriptionElementLayout"
    style="@style/block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/block_text"
    tools:context="com.bunbeauty.ideal.myapplication.cleanArchitecture.adapters.elements.SubscriptionElement">

    <ImageView
        android:id="@+id/avatarSubscriptionElementImage"
        android:layout_width="@dimen/photo_avatar_width"
        android:layout_height="@dimen/photo_avatar_height"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/workerNameSubscriptionElementText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/unsubscribeSubscriptionElementBtn"
        style="@style/smallButton"
        android:layout_gravity="center"
        android:text="Отписаться" />

</LinearLayout>