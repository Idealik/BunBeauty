<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/panelColor"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/backTopPanelText"
        style="@style/iconSolid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.3"
        android:text="@string/back_ico" />

    <TextView
        android:id="@+id/titleTopPanelText"
        style="@style/myTitle"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="start"
        android:text="Заголовок" />

    <ImageView
        android:id="@+id/logoTopPanelImage"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:visibility="gone"
        app:srcCompat="@drawable/bun_beauty" />

    <TextView
        android:id="@+id/multiTopPanelText"
        style="@style/iconSolid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:paddingEnd="10dp"
        android:gravity="end" />

    <LinearLayout
        android:id="@+id/avatarTopPanelLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/avatarTopPanelImage"
            android:layout_width="@dimen/photo_avatar_height"
            android:layout_height="@dimen/photo_avatar_height"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

</LinearLayout>