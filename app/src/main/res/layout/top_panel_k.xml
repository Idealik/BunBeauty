<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainBlue"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/backTopPanelText"
        style="@style/iconSolid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/back_ico" />

    <TextView
        android:id="@+id/titleTopPanelText"
        style="@style/myTitle"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_weight="4"
        android:gravity="start"
        android:text="Заголовок" />

    <TextView
        android:id="@+id/editTopPanelText"
        style="@style/iconSolid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/edit_ico" />

    <TextView
        android:id="@+id/searchTopPanelText"
        style="@style/iconSolid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/search_ico"
        android:padding="10dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/avatarTopPanelLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/avatarTopPanelImage"
            android:layout_width="@dimen/photo_small_avatar_height"
            android:layout_height="@dimen/photo_small_avatar_height"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

</LinearLayout>