<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/allPages"
    tools:context="com.bunbeauty.ideal.myapplication.cleanArchitecture.mvp.activities.createService.CreationServiceActivity">

    <include layout="@layout/part_top_panel" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/addServiceCreationServiceBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topPanelLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mainCreationServiceLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout style="@style/block">

                    <EditText
                        android:id="@+id/nameCreationServiceInput"
                        style="@style/mainBlockText"
                        android:hint="@string/nameAddServiceTB" />
                </LinearLayout>

                <LinearLayout style="@style/block">

                    <EditText
                        android:id="@+id/costCreationServiceInput"
                        style="@style/mainBlockText"
                        android:hint="@string/costAddServiceTB"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout style="@style/block">

                    <EditText
                        android:id="@+id/addressCreationServiceInput"
                        style="@style/mainBlockText"
                        android:hint="Адрес" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/categoryCreationServiceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout style="@style/block">

                    <EditText
                        android:id="@+id/descriptionCreationServiceInput"
                        style="@style/mainBlockText"
                        android:hint="Описание"
                        android:inputType="textMultiLine|textCapSentences" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/photoCreationServiceLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/photoCreationServiceBtn"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/plus_photo_bg"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="60sp" />
                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/premiumCreationServiceLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/addServiceCreationServiceBtn"
        style="@style/mainButtonOther"
        android:text="@string/addServices"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanelLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/continueCreationServiceBtn"
        style="@style/mainButtonOther"
        android:text="Продолжить"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanelLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <include layout="@layout/part_bottom_panel" />

</androidx.constraintlayout.widget.ConstraintLayout>