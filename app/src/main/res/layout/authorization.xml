<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/logInPages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bunbeauty.ideal.myapplication.cleanArchitecture.mvp.activities.logIn.AuthorizationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/verifyAuthorizationBtn">


        <ImageView
            android:id="@+id/logoAuthorizationImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/bun_beauty" />

        <TextView
            android:id="@+id/titleAuthorizationText"
            style="@style/loginPackageText"
            android:text="Введите номер телефона" />

        <LinearLayout
            style="@style/loginPackageLinearLayout"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/codeAuthorizationSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/panelColor"
                android:entries="@array/countryCode"
                android:popupBackground="@color/panelColor" />

            <EditText
                android:id="@+id/phoneAuthorizationInput"
                style="@style/loginPackageInput"
                android:hint="@string/phoneRegistration"
                android:inputType="phone" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/loadingAuthorizationProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/verifyAuthorizationBtn"
        style="@style/mainButtonLogIn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Войти" />

</androidx.constraintlayout.widget.ConstraintLayout>