<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColorBG"
    tools:context=".createService.AddService">

    <LinearLayout
        android:id="@+id/headerAddServiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewAddService"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/footerAddServiceLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerAddServiceLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_text">

                <EditText
                    android:id="@+id/nameAddServiceInput"
                    style="@style/mainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nameAddServiceTB"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_text">

                <EditText
                    android:id="@+id/costAddServiceInput"
                    style="@style/mainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/costAddServiceTB"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                style="@style/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_text">

                <EditText
                    android:id="@+id/addressAddServiceInput"
                    style="@style/mainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Адрес" />
            </LinearLayout>

            <LinearLayout
                style="@style/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_text"
                android:orientation="horizontal">

                <TextView
                    style="@style/mainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Категория" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Spinner
                        android:id="@+id/categoryAddServiceSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/panelColor"
                        android:backgroundTint="@color/panelColor"
                        android:popupBackground="@color/panelColor"
                        android:entries="@array/category" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_text">

                <EditText
                    android:id="@+id/descriptionAddServiceInput"
                    style="@style/mainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Описание"
                    android:inputType="textMultiLine|textCapSentences" />
            </LinearLayout>

            <LinearLayout
                style="@style/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_text"
                android:orientation="horizontal">

                <TextView
                    style="@style/mainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:hint="Премиум" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/panelColor"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/noPremiumAddServiceText"
                        style="@style/textItemSolid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/premium"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/yesPremiumAddServiceText"
                        style="@style/textItemSolid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/yellow"
                        android:gravity="center"
                        android:text="@string/premium"
                        android:textColor="@color/black"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/premiumAddServiceLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/feedAddServiceLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/servicePhotoAddServiceImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/ic_launcher_round"
                        tools:srcCompat="@tools:sample/avatars" />
                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/addServiceAddServiceBtn"
                style="@style/mainButtonOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/addServices" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/footerAddServiceLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_panel_height"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>