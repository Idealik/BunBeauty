<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other.MainScreen"
    android:theme="@style/allPages">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoryMainScreenScroll"
        app:layout_constraintTop_toBottomOf="@+id/headerMainScreenLayout">

        <LinearLayout
            android:id="@+id/categoryMainScreenLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nailsMainScreenBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ногти"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/hairMainScreenBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="волосы" />
            <Button
                android:id="@+id/eyeMainScreenBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="глаза"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/makeUpMainScreenBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="визаж"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/massageMainScreenBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="массаж"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/otherMainScreenBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="остальное"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/categoryMainScreenScroll" >

        <LinearLayout
            android:id="@+id/resultsMainScreenLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/headerMainScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/footerMainScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>