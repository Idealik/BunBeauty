<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_panel_height"
    android:background="@color/panelColor"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/profileBottomPanelText"
        style="@style/textItemRegular"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/panelColor"
        android:gravity="center"
        android:text="@string/profile_ico" />

    <TextView
        android:id="@+id/mainScreenBottomPanelText"
        style="@style/textItemSolid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/panelColor"
        android:gravity="center"
        android:text="@string/main_screen_ico" />

    <TextView
        android:id="@+id/chatBottomPanelText"
        style="@style/textItemRegular"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/panelColor"
        android:gravity="center"
        android:text="@string/chat_ico" />

</LinearLayout>