<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topPanelMainLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/mainBlue"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/backTopPanelText"
        style="@style/iconSolid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/back_ico" />

    <TextView
        android:id="@+id/titleTopPanelText"
        style="@style/myTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/settingTopPanelText"
        style="@style/iconSolid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/avatarTopPanelLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/avatarTopPanelImage"
            android:layout_width="@dimen/photo_avatar_height"
            android:layout_height="@dimen/photo_avatar_height"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/countOfSubsTopPanelText"
            style="@style/extraText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/subscribeTopPanelText"
            style="@style/iconSolid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/subscribe_ico"
            android:visibility="gone" />

        <TextView
            android:id="@+id/unsubscribeTopPanelText"
            style="@style/iconRegular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/subscribe_ico"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>