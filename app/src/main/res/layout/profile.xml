<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/allPages"
    tools:context=".other.Profile">

    <LinearLayout
        android:id="@+id/headerProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/footerProfileLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerProfileLayout">

        <!-- Верхняя часть-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/block_text"
            style="@style/block"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@drawable/block_text"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatarProfileImage"
                    android:layout_width="@dimen/photo_width"
                    android:layout_height="@dimen/photo_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:id="@+id/ratingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white">

                    <!-- Rating bar -->

                    <Button
                        android:id="@+id/ratingProfileBtn"
                        style="@style/smallMainButtonOther"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom"
                        android:text="Оценок еще нет" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/block_text"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/nameProfileText"
                    style="@style/mainTextProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/cityProfileText"
                    style="@style/defaultTextProfile"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/phoneProfileText"
                    style="@style/defaultTextProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/subscribersProfileText"
                    style="@style/defaultTextProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="TextView" />

                <Button
                    android:id="@+id/subscriptionsProfileBtn"
                    style="@style/smallMainButtonOther"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Подписки" />

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/servicesProfileScroll"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:id="@+id/servicesProfileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <ScrollView
            android:id="@+id/orderProfileScroll"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:id="@+id/ordersProfileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <Button
            android:id="@+id/addServicesProfileBtn"
            style="@style/smallMainButtonOther"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:text="@string/addServices" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/servicesOrOrdersProfileSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:checked="false"
            android:text="My orders"
            android:textOff="OFF"
            android:textOn="ON"
            app:showText="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footerProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_panel_height"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>