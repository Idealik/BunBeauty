<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightBlue"
    tools:context="com.bunbeauty.ideal.myapplication.cleanArchitecture.mvp.activities.profile.ProfileActivity">

    <include layout="@layout/part_top_panel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/scheduleProfileBtn"
        style="@style/smallButton"
        android:text="Расписание"
        app:layout_constraintBottom_toTopOf="@id/bottomPanelLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/loadingProfileProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/mainBlue"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/mainProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topPanelLayout">

        <!-- Верхняя часть-->
        <LinearLayout
            style="@style/block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/block_text"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/block_text"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/avatarProfileImage"
                        android:layout_width="@dimen/photo_width"
                        android:layout_height="@dimen/photo_height"
                        android:layout_gravity="center"
                        tools:srcCompat="@tools:sample/avatars" />
                </LinearLayout>

                <!-- Rating bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/cityProfileText"
                        style="@style/defaultTextProfile"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/phoneProfileText"
                        style="@style/defaultTextProfile"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/subscribersProfileText"
                        style="@style/defaultTextProfile"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">

                <LinearLayout
                    android:id="@+id/ratingProfileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_button"
                    android:gravity="center">

                    <RatingBar
                        android:id="@+id/profileRatingBar"
                        style="@android:style/Widget.Holo.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:theme="@style/ratingBarColors" />

                    <TextView
                        android:id="@+id/withoutRatingProfileText"
                        style="@style/buttonText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Оценок еще нет" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/subscriptionsProfileBtn"
                    style="@style/smallButton"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Подписки" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dialogsProfileBtn"
                    style="@style/smallButton"
                    android:layout_width="match_parent"

                    android:layout_weight="1"
                    android:text="Диалог" />

                <!--<LinearLayout
                    android:id="@+id/subscriptionsProfileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/main_button"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/subscriptionsProfileText"
                        style="@style/buttonText"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="Подписки" />
                </LinearLayout>-->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/switcherProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addServicesProfileBtn"
                style="@style/smallButton"
                android:text="@string/addServices" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recyclerViewProfileRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottomPanelLayout"
        app:layout_constraintTop_toBottomOf="@id/mainProfileLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/servicesProfileRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ordersProfileRecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />
    </LinearLayout>

    <include layout="@layout/part_bottom_panel" />

</androidx.constraintlayout.widget.ConstraintLayout>