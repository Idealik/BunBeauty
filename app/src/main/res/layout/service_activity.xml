<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColorBG"
    tools:context="com.bunbeauty.ideal.myapplication.cleanArchitecture.mvp.activities.service.ServiceActivity">

    <LinearLayout
        android:id="@+id/topServiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressServiceBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/panelColor"
        app:layout_constraintBottom_toTopOf="@+id/bottomServiceLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topServiceLayout" />

    <ScrollView
        android:id="@+id/mainServiceScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/bottomServiceLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topServiceLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Верхняя часть весь текст: цена, название, рейтинг-->
            <LinearLayout
                android:id="@+id/mainServiceLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ratingServiceLayout"
                    style="@style/block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/block_text"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/mainBlockText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:padding="10dp"
                        android:paddingEnd="0dp"
                        android:text="Рейтинг: " />

                    <TextView
                        android:id="@+id/withoutRatingServiceText"
                        style="@style/mainBlockText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:text="Оценок еще нет"
                        android:visibility="gone" />

                    <RatingBar
                        android:id="@+id/ratingServiceBar"
                        style="@android:style/Widget.Holo.RatingBar.Small"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:isIndicator="true"
                        android:padding="5dp"
                        android:theme="@style/ratingBarColors"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/ratingServiceText"
                        style="@style/defaultText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/countOfRatesServiceText"
                        style="@style/defaultText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout style="@style/block">

                    <TextView
                        android:id="@+id/costServiceText"
                        style="@style/mainBlockText" />
                </LinearLayout>

                <LinearLayout style="@style/block">

                    <TextView
                        android:id="@+id/addressServiceText"
                        style="@style/mainBlockText" />
                </LinearLayout>

                <LinearLayout style="@style/block">

                    <TextView
                        style="@style/mainBlockText"
                        android:layout_width="wrap_content"
                        android:text="Описание:" />

                    <TextView
                        android:id="@+id/descriptionServiceText"
                        style="@style/defaultText"
                        android:layout_width="match_parent" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/premiumServiceLayout"
                    style="@style/block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/block_text"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/mainBlockText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Премиум" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/offPremiumServiceText"
                            style="@style/iconSolid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/panelColor"
                            android:gravity="center"
                            android:text="@string/premium_ico"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/onPremiumServiceText"
                            style="@style/iconSolid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/yellow"
                            android:gravity="center"
                            android:text="@string/premium_ico"
                            android:textColor="@color/black"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Нижняя часть фотографии и кнопка-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/mainServiceLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <LinearLayout
                            android:id="@+id/imagesServiceLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <Button
                    android:id="@+id/scheduleServiceBtn"
                    style="@style/mainButtonOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Расписание" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomServiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>