<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColorBG"
    tools:context="com.bunbeauty.ideal.myapplication.createService.MyCalendar">

    <RelativeLayout
        android:id="@+id/mainMyCalendarLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toTopOf="@+id/footerMyCalendarLayout"
        app:layout_constraintTop_toBottomOf="@+id/headerMyCalendarLayout"
        app:layout_constraintVertical_bias="0.1"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/continueMyCalendarBtn"
        style="@style/mainButtonOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Продолжить"
        app:layout_constraintBottom_toTopOf="@+id/footerMyCalendarLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerMyCalendarLayout"
        app:layout_constraintVertical_bias="0.9" />

    <LinearLayout
        android:id="@+id/headerMyCalendarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/footerMyCalendarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>