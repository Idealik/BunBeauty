<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightBlue"
    tools:context="com.bunbeauty.ideal.myapplication.cleanArchitecture.mvp.activities.editing.EditProfileActivity">

    <include layout="@layout/part_top_panel" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/editProfileEditProfileBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topPanelLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Топ бар -->
            <LinearLayout
                style="@style/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_text"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/avatarEditProfileImage"
                        android:layout_width="@dimen/photo_width"
                        android:layout_height="@dimen/photo_height"
                        android:layout_gravity="center"
                        tools:srcCompat="@tools:sample/avatars" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.5">

                    <Button
                        android:id="@+id/logOutEditProfileBtn"
                        style="@style/smallMainButtonOther"
                        android:text="@string/logOut" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/block">

                <EditText
                    android:id="@+id/nameEditProfileInput"
                    style="@style/mainBlockText"
                    android:hint="@string/nameAddServiceTB" />
            </LinearLayout>

            <LinearLayout style="@style/block">

                <EditText
                    android:id="@+id/surnameEditProfileInput"
                    style="@style/mainBlockText"
                    android:hint="@string/surname" />
            </LinearLayout>

            <LinearLayout style="@style/block">

                <TextView
                    style="@style/mainBlockText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/citySpinnerEditProfileSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:backgroundTint="@color/panelColor"
                    android:entries="@array/choice_cites"
                    android:popupBackground="@color/panelColor" />
            </LinearLayout>

            <!-- Телефон -->
            <LinearLayout style="@style/block">

                <Spinner
                    android:id="@+id/codeEditProfileSpinner"
                    style="@style/mainBlockText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:entries="@array/countryCodeForEditService" />

                <EditText
                    android:id="@+id/phoneEditProfileInput"
                    style="@style/mainBlockText"
                    android:hint="@string/phone"
                    android:inputType="phone" />
            </LinearLayout>

            <EditText
                android:id="@+id/codeEditProfileInput"
                style="@style/mainBlockText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/enterCode"
                android:inputType="number" />

            <Button
                android:id="@+id/verifyCodeEditProfileBtn"
                style="@style/mainButtonOther"
                android:text="@string/verifyCode"
                />

            <Button
                android:id="@+id/resendCodeEditProfileBtn"
                style="@style/mainButtonOther"
                android:text="@string/resendCode"
                />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/editProfileEditProfileBtn"
        style="@style/mainButtonOther"
        android:text="@string/saveData"
        app:layout_constraintBottom_toTopOf="@id/bottomPanelLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <include layout="@layout/part_bottom_panel" />
</androidx.constraintlayout.widget.ConstraintLayout>