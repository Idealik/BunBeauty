<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".logIn.VerifyPhone">

    <ImageView
        android:id="@+id/logoVerifyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/bun_beauty" />

    <EditText
        android:id="@+id/codeVerifyInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/lightText"
        android:ems="10"
        android:hint="@string/enterCode"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/lightText" />

    <Button
        android:id="@+id/verifyVerifyBtn"
        style="@style/mainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/verifyCode" />

    <TextView
        android:id="@+id/resendVerifyText"
        style="@style/extraText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/resendCode" />

    <TextView
        android:id="@+id/changePhoneVerifyText"
        style="@style/extraText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:text="Именить номер" />
</LinearLayout>