<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/logInPages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bunbeauty.ideal.myapplication.cleanArchitecture.mvp.activities.logIn.VerifyPhoneActivity">

    <LinearLayout
        style="@style/loginPackageMainLinearLayout"
        app:layout_constraintBottom_toTopOf="@+id/verifyVerifyPhoneBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoVerifyImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bun_beauty" />

        <EditText
            android:id="@+id/codeVerifyPhoneInput"
            style="@style/loginPackageInput"
            android:layout_gravity="center"
            android:hint="@string/enterCode"
            android:inputType="phone" />

        <LinearLayout
            style="@style/loginPackageLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/alertCodeVerifyText"
                style="@style/extraText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="На указанный номер,\n был отправлен код подтверждения" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/loadingVerifyPhoneProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white" />

        <LinearLayout
            style="@style/loginPackageLinearLayout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resendCodeVerifyPhoneText"
                style="@style/loginPackageText"
                android:layout_weight="1"
                android:text="@string/resendCode" />

            <TextView
                android:id="@+id/changePhoneVerifyPhoneText"
                style="@style/loginPackageText"
                android:layout_weight="1"
                android:text="@string/change_number" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifyVerifyPhoneBtn"
        style="@style/loginButton"
        android:text="Войти"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
