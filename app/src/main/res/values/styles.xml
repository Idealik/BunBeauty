<resources>

    <!-- THEMES -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorAccent">@color/white50</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlActivated">@color/darkBlue</item>
        <item name="snackbarStyle">@style/MySnackbar</item>
    </style>

    <style name="AppTheme.LoadingScreen">
        <item name="android:windowBackground">@drawable/screen_loading</item>
    </style>

    <style name="DefaultTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LogInPage">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:background">@color/mainBlue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- TEXT -->

    <style name="ProfileText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileMediumText" parent="ProfileText">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileThinText" parent="ProfileText">
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/white80</item>
    </style>

    <style name="ExtraText">
        <item name="android:textColor">@color/white50</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TopTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="MaterialInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MaterialLoginInputLayout" parent="MaterialInputLayout">
        <item name="boxStrokeColor">@color/selector_white</item>
        <item name="boxBackgroundColor">@color/mainBlue</item>
        <item name="android:textColorHint">@color/white50</item>
        <item name="startIconTint">@color/white50</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="MaterialInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MaterialLoginInput" parent="MaterialInput">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialSpinnerLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="boxBackgroundColor">@color/white50</item>
    </style>

    <style name="MaterialSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MaterialLoginSpinnerLayout" parent="MaterialSpinnerLayout">
        <item name="startIconTint">@color/white50</item>
        <item name="boxBackgroundColor">@color/mainBlue</item>
        <item name="boxStrokeColor">@color/selector_white</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="MaterialLoginSpinner" parent="MaterialSpinner">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InfoText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ServiceBodyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- BUTTONS -->

    <style name="baseButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="smallButton" parent="baseButton">
        <item name="android:layout_width">@dimen/small_button_width</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:backgroundTint">@color/selector_dark_blue</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="outlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="strokeColor">@color/darkBlue</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="actionButton" parent="baseButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">@color/darkBlue</item>
        <item name="cornerRadius">28dp</item>
        <item name="borderWidth">0dp</item>
        <item name="tint">@color/white</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="progressButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- BLOCKS -->
    <style name="verticalBlock">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wideVerticalBlock" parent="verticalBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="horizontalBlock">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wideHorizontalBlock" parent="horizontalBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="highHorizontalBlock" parent="horizontalBlock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wideHorizontalBlockWithSmallMargin">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_small_margin</item>
    </style>

    <!-- BARS -->

    <style name="MySnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">58dp</item>
    </style>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_star</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <!-- IMAGE -->

    <style name="profileAvatar">
        <item name="android:layout_width">@dimen/photo_width</item>
        <item name="android:layout_height">@dimen/photo_height</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="photoElement">
        <item name="android:layout_width">@dimen/photo_width</item>
        <item name="android:layout_height">@dimen/photo_height</item>
    </style>

    <!-- TAB LAYOUT -->

    <style name="tabs" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabBackground">@color/mainBlue</item>
        <item name="tabIndicatorColor">@color/darkBlue</item>
        <item name="tabSelectedTextColor">@color/darkBlue</item>
    </style>

    <!-- NAVIGATION -->

    <style name="bottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_panel_height</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="elevation">10dp</item>
        <item name="android:background">@color/mainBlue</item>
        <item name="itemIconTint">@color/selector_navigation</item>
    </style>

    <!-- ======================================================================================= -->

    <!-- Style for icons -->
    <style name="icon">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="iconSolid" parent="icon">
        <item name="fontFamily">@font/font_awesome_solid</item>
    </style>

    <!-- Style for main text -->
    <style name="textOnPages">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="timeText" parent="textOnPages">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="defaultText" parent="textOnPages">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mainBlockText" parent="textOnPages">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:inputType">textPersonName|textCapSentences</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mainTextMainScreen" parent="textOnPages">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="defaultTextMainScreen" parent="textOnPages">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mainTextProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="blueBoldText">
        <item name="android:textColor">@color/mainBlue</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Style for block style -->

    <style name="ratingBarColors" parent="@android:style/Widget.RatingBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:secondaryProgressTint">@color/black</item>
        <item name="android:progressTint">@color/yellow</item>
    </style>

    <style name="ratingBarColorsPremium" parent="@android:style/Widget.RatingBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:secondaryProgressTint">@color/black</item>
        <item name="android:progressTint">@color/mainBlue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- DIALOG -->

    <style name="myDialogTheme" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:colorAccent">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- CHIP -->
    <style name="choiceChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/mainBlue</item>
        <item name="rippleColor">@color/darkBlue40</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <!-- SELECTED AND UNSELECTED STYLE -->

    <style name="selected_button">
        <item name="backgroundColor">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="unselected_button">
        <item name="android:background">@drawable/item_unselected</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/mainBlue</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Стиль свичера -->
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@android:color/holo_green_light</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@android:color/holo_orange_dark</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="LoginPackageText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginPackageLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginPackageMainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LoginInput">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white50</item>
        <item name="android:backgroundTint">@color/white50</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="LoginSpinnerElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/mainBlue</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="LoginSpinner">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LightBlueButton" parent="baseButton">
        <item name="fontFamily">@font/font_awesome_solid</item>
        <item name="android:background">@drawable/item_unselected</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="scheduleButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="weekDayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="horizontalLayout">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wideLabel">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
