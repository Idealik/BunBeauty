<resources>

    <!-- THEMES -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorAccent">@color/white50</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="allPages" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="logInPage">
        <item name="android:background">@color/mainBlue</item>
    </style>

    <!-- TEXT -->

    <style name="profileText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="profileMediumText" parent="profileText">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="profileThinText" parent="profileText">
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/white80</item>
    </style>

    <style name="extraText">
        <item name="android:textColor">@color/white50</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="topTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!-- BUTTONS -->
    <style name="baseButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="loginButton" parent="baseButton">
        <item name="android:backgroundTint">@color/darkBlue</item>
        <item name="android:width">220dp</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="smallButton" parent="baseButton">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:backgroundTint">@color/darkBlue</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="switchButton" parent="baseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/switcher</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="actionButton" parent="baseButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">@color/darkBlue</item>
        <item name="cornerRadius">28dp</item>
        <item name="borderWidth">0dp</item>
        <item name="tint">@color/white</item>
        <item name="elevation">5dp</item>
    </style>

    <!-- BLOCKS -->

    <style name="verticalBlock">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wideVerticalBlock" parent="verticalBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="horizontalBlock">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wideHorizontalBlock" parent="horizontalBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="highHorizontalBlock" parent="horizontalBlock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- IMAGE -->

    <style name="profileAvatar">
        <item name="android:layout_width">@dimen/photo_width</item>
        <item name="android:layout_height">@dimen/photo_height</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- RATING BAR -->

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <!-- TAB LAYOUT -->

    <style name="tabs" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabBackground">@color/mainBlue</item>
        <item name="tabIndicatorColor">@color/darkBlue</item>
        <item name="tabSelectedTextColor">@color/darkBlue</item>
    </style>

    <!-- NAVIGATION -->

    <style name="bottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_panel_height</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:background">@color/mainBlue</item>
        <item name="itemIconTint">@color/navigation</item>
    </style>

    <style name="topNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:background">@color/mainBlue</item>
        <item name="itemIconTint">@color/navigation</item>
    </style>

    <!-- ======================================================================================= -->


    <style name="buttonText" parent="@android:style/Widget.RatingBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="lightText">
        <item name="android:backgroundTint">@color/white50</item>
        <item name="android:inputType">textPersonName|textCapWords</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/white50</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lightTextForText" parent="lightText">
        <item name="android:inputType">textPersonName|textCapWords</item>
    </style>

    <style name="lightTextForPhone" parent="lightText">
        <item name="android:inputType">phone</item>
    </style>

    <!-- Style for icons -->
    <style name="icon">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="iconRegular" parent="icon">
        <item name="fontFamily">@font/font_awesome_second_regular</item>
    </style>

    <style name="iconSolid" parent="icon">
        <item name="fontFamily">@font/font_awesome_solid</item>
    </style>

    <!-- Style for titles -->
    <style name="myTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for main text -->
    <style name="textOnPages">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/block_text</item>
    </style>

    <style name="timeText" parent="textOnPages">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="defaultText" parent="textOnPages">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mainBlockText" parent="textOnPages">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:inputType">textPersonName|textCapSentences</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mainTextMainScreen" parent="textOnPages">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="defaultTextMainScreen" parent="textOnPages">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mainTextProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="foundProfileElement">
        <item name="android:textColor">@color/mainBlue</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- Style for block style -->
    <style name="block">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/mainBlue</item>
    </style>

    <style name="ratingBarColors" parent="@android:style/Widget.RatingBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:secondaryProgressTint">@color/black</item>
        <item name="android:progressTint">@color/yellow</item>
    </style>

    <style name="ratingBarColorsPremium" parent="@android:style/Widget.RatingBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:secondaryProgressTint">@color/black</item>
        <item name="android:progressTint">@color/mainBlue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Стиль свичера -->
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@android:color/holo_green_light</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@android:color/holo_orange_dark</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="loginPackageText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loginPackageLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loginPackageMainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="loginInput">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white50</item>
        <item name="android:backgroundTint">@color/white50</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="loginSpinnerElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/mainBlue</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="loginSpinner">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainButton" parent="baseButton">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="lightBlueButton" parent="baseButton">
        <item name="fontFamily">@font/font_awesome_solid</item>
        <item name="android:background">@drawable/tags_button</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="scheduleButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="weekDayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="horizontalLayout">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wideLabel">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
