<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Reg pages -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/lightText</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="allPages" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/mainColorBG</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style for logIn pages -->
    <style name="LogInPages">
        <item name="windowActionBar">false</item>
        <item name="android:background">@color/logInBackGround</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Style for main buttons -->
    <style name="mainButton">
        <item name="android:width">260dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="mainButtonLogIn" parent="mainButton">
        <item name="android:background">@drawable/main_button_login_background</item>
    </style>

    <style name="mainButtonOther" parent="mainButton">
        <item name="android:background">@drawable/main_button</item>
    </style>

    <style name="smallMainButtonOther" parent="mainButton">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:width">172dp</item>
        <item name="android:height">36dp</item>
    </style>

    <!-- Style for extra text -->
    <style name="extraText">
        <item name="android:textColor">@color/lightText</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ImageRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

    <style name="buttonText" parent="@android:style/Widget.RatingBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="lightText">
        <item name="android:backgroundTint">@color/lightText</item>
        <item name="android:inputType">textPersonName|textCapWords</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/lightText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lightTextForText" parent="lightText">
        <item name="android:inputType">textPersonName|textCapWords</item>
    </style>

    <style name="lightTextForPhone" parent="lightText">
        <item name="android:inputType">phone</item>
    </style>

    <!-- Style for icons -->
    <style name="textItem" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textItemRegular" parent="textItem">
        <item name="fontFamily">@font/font_awesome_second_regular</item>
    </style>
    <style name="textItemSolid" parent="textItem" >
        <item name="fontFamily">@font/font_awesome_solid</item>
    </style>

    <!-- Style for titles -->
    <style name="myTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for main text -->
    <style name="TextOnPages">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/block_text</item>
    </style>

    <style name="defaultText" parent="TextOnPages">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="mainText" parent="TextOnPages">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:inputType">textPersonName|textCapSentences</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <style name="mainTextMainScreen" parent="TextOnPages">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="defaultTextMainScreen" parent="TextOnPages">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="defaultTextProfile">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="mainTextProfile">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="foundProfileElement">
        <item name="android:textColor">@color/panelColor</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- Style for block style -->
    <style name="block" >
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ratingBarColors" parent="@android:style/Widget.RatingBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:secondaryProgressTint">@color/black</item>
        <item name="android:progressTint">@color/yellow</item>
    </style>

    <style name="ratingBarColorsPremium" parent="@android:style/Widget.RatingBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:secondaryProgressTint">@color/black</item>
        <item name="android:progressTint">@color/panelColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Стиль свичера -->
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@android:color/holo_green_light</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@android:color/holo_orange_dark</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

</resources>
