<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Reg pages -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/lightText</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="allPages" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/mainColorBG</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style for logIn pages -->
    <style name="LogInPages">
        <item name="android:background">@drawable/bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Style for main buttons -->
    <style name="mainButton">
        <item name="android:width">250dp</item>
        <item name="android:background">@drawable/main_button_background</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
