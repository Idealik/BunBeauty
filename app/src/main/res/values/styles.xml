<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Reg pages -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/lightText</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="allPages" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/mainColorBG</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style for logIn pages -->
    <style name="LogInPages">
        <item name="windowActionBar">false</item>
        <item name="android:background">@color/logInBackGround</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Style for main buttons -->
    <style name="mainButton">
        <item name="android:width">250dp</item>
        <item name="android:background">@drawable/main_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
    <!-- Style for extra text -->
    <style name="extraText">
        <item name="android:textColor">@color/lightText</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ImageRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

    <!-- Style for icons -->
    <style name="textItem">
        <item name="fontFamily"></item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
